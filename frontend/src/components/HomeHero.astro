---
import Button from '../components/LinkButton.astro';
import '../CSS/Section.css';
import '../CSS/Global.css';
---

<div class="home-hero hero-border top-design-border bottom-design-border">
    <div class="home-layout container">
        <div class="title-section">
            <h1>Clean living<br>with shannon</h1>
            <p>Cleaning excellence, delivered with precision! <br>We offer our Clean Living services for homes,<br>Airbnbs, and businesses in the <strong id="location-emphasis">East Texas area.</strong></p>
        </div>
        <div class="button-container">
                <Button href="/Contact" text="Get In Touch!" textSize="var(--fnt-sz-48)" paddingT="3rem"  paddingB="2rem" paddingL="13rem" paddingR="13rem" br="1rem"/>
        </div>
        
    </div>
</div>

<style>
    .home-hero{
        min-height: 80vh;
    }

    .home-layout{
        display: grid;
        row-gap: 0rem;
    }

    .title-section{
        margin-top: 10%;
        margin-left: 3rem;
    }

    .showcase-cards{
        width: 30rem;
        height: 30rem;
        background: green;
    }
    
    .button-container{
        width: fit-content;
        height: fit-content;
        margin-top: 2rem;
        margin-left: 3rem;
        grid-row: 2;
        grid-column: 1;
    }

    h1{
        font-family: var(--font-primary);
        font-size: var(--fnt-sz-100);
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: -0.03em;
        color: var(--highlight-primary);
    }

    p{
        margin-top: 1.8rem;
        color: var(--highlight-secondary);
        font-family: var(--font-primary);
        font-size: var(--fnt-sz-32);
        font-weight: 500;
    }

    #location-emphasis{
        font-weight: 500;
    }

</style>

