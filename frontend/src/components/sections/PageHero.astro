---
import '../../CSS/Global.css';
import '../../CSS/Section.css';
import '../../CSS/Background.css';

const {heading, description} = Astro.props;
---

<div class="hero section background-primary hero-border top-design-border bottom-design-border">
    <div class="container hero-content">
        <h1 class="font-type">{heading}</h1>
        <p><strong class="font-type">{description}</strong></p>
    </div>
</div>


<style>
    .hero-content{
        text-align: center;
        padding-top: 10vh;
        padding-bottom: 12vh;
    }

    .font-type{
        font-family: var(--font-primary);
        text-transform: uppercase;
    }

    h1{
        color: var(--highlight-primary);
        letter-spacing: -0.03em;
        font-weight: 800;
        font-size: var(--fnt-sz-200);
    }

    p{
        color: var(--highlight-secondary);
        letter-spacing: var(--lt-spc-1);
        font-size: var(--fnt-sz-32);
        margin-top: 1rem;
    }

    strong{
        font-weight: 700;
    }

    @media (max-width: 1600px){
        h1{
            font-size: var(--fnt-sz-100);
        }

        p{
            font-size: var(--fnt-sz-28);
        }
    }

</style>
